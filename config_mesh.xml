<mesh_parameters>

  <!-- Minimum DX an maximum DX
       - To create a quasi-uniform (QU) mesh, set [dxMin=dxMax].
       - dxMin here is ignored if [dxWindowConst=true] -->
  <dxMin>80.0</dxMin>
  <dxMax>320.0</dxMax>

  <!-- Output mesh file name -->
  <outFileName>base_mesh.nc</outFileName>

  <!-- Do all windows have the same dxMin and dxMax?
       If false, dxMin and dxMax must be specified in windowDxVar-->
  <dxWindowConst>true</dxWindowConst>

  <!-- Horizontal grid resolution (deg x deg) of the base lat-lon grid. -->
  <dlatBase>0.20</dlatBase>
  <dlonBase>0.20</dlonBase>

  <!-- Window information for [dxWindowConst=true] -->
  <windowDxConst format="lon,lat,diameter,sigma">
     -84.31, 35.93, 1000.0, 280.0
     127.50, 37.50, 500.0 , 280.0
    -154.50, 63.40, 750.0 , 280.0
  </windowDxConst>

  <!-- Window information for [dxWindowConst=false]
       to include dxMin and dxMax info -->
  <windowDxVar format="lon,lat,diameter,sigma,dxMin">
     -84.31, 35.93, 1000.0, 280.0, 40.0
     127.50, 37.50, 500.0 , 280.0, 80.0
    -154.50, 63.40, 750.0 , 280.0, 20.0
  </windowDxVar>

</mesh_parameters>
